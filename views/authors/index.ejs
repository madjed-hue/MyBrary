<h2>Search Authors</h2>
<form action="/authors" method="get">
  <label for="name">Name</label>
  <input type="text" name="name" value="<%= searchOptions.name %>" />
  <button class="btn btn-primary" type="submit">Search</button>
</form>
<br />
<% authors.forEach(author => { %>
<div><%= author.name %></div>
<div class="btn-row">
  <a class="btn btn-primary" href="/authors/<%= author.id %> ">View</a>
  <a class="btn btn-secondary" href="/authors/<%= author.id %>/edit">Edit</a>
  <%- include('../partials/deleteform.ejs', { url: `/authors/${author.id}` }) %>
</div>
<% }) %>
