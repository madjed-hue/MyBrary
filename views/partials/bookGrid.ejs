<% bookCoverClass = locals.large ? 'book-cover-large' : '' %> <%bookGrigClass =
locals.large ? 'book-grid-large' : '' %>
<div class="book-grid <%= bookGrigClass %>">
  <% books.forEach(book=>{ %>
  <a href="/books/<%=book.id%>">
    <img
      class="book-cover <%= bookCoverClass %>"
      src="<%= book.coverImagePath %>"
      alt="<%=book.title %>"
    />
  </a>
  <% }) %>
</div>
